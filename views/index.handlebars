<div class="main_div">
  <div class="title">
    <img src="assets/img/burger.jpg" alt="burger image" width="200" height="200">
    <h1>Eat Da Burger!</h1>
  </div>

  <div class="row">
    <div class="column">
      <h2>Burgers Ready to Devoure</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{name}}
              <button class="devoure" data-id="{{id}}">Devoure</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="column">
      <ul>
        <h2>Burgers that have been devoured</h2>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{name}}
              <button class="delete" data-id="{{id}}">Delete</button>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>  

  <div>
    <form class="create-form">
      <h2>Add a Burger</h2>
      <div class="form_group">
        <label for="burgName">Name of Burger:</label>
        <input type="text" id="burgName" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>