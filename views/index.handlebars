<div class="title">
  <img src="/public/assets/img/burger.jpg" alt="burger image" width="200" height="200">
  <h1>Eat Da Burger!</h1>
</div>

<div class="row">
  <div class="column">
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{name}}
            <button class="devoure" data-id="{{id}}">Devoure</button>
          </li>>
        {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="column">
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <li>
            {{name}}
          </li>>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>  

<div>
  <h2>Add a Burger</h2>

  <form class-"creae-form">
    <div class="form_group">
      <label for="name">Name of Burger:</label>
      <input type="text" id="name" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>

</div>